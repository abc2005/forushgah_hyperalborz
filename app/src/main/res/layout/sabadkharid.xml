<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
	    android:id="@+id/ln"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_acts" />

    <LinearLayout
        android:id="@+id/noitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvnoitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#62757F"
            android:textSize="19sp"
            android:text="@string/emptySabad"
            android:textStyle="bold" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="7dp">

        <TextView
            android:id="@+id/tvjamkharid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/jamKolKharid"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/jamkharid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/green2"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginBottom="?android:attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="2dp"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/removeall"
                style="@style/textview_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red2"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="حذف همه"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/takmil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#3A5475"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="ارسال سفارش"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>