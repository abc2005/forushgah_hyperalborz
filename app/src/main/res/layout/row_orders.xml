<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:lineSpacingExtra="10dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"></View>

        <TextView
            android:id="@+id/price"
            style="@style/textstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:textColor="#68BC6C"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"></View>

        <TextView
            android:id="@+id/stat"
            style="@style/textstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dates"
                style="@style/textstyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />

            <Button
                android:id="@+id/show_factor"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="نمایش فاکتور" />

            <Button
                android:id="@+id/delete"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:layout_toLeftOf="@+id/show_factor"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="حذف سفارش"
                android:textColor="#F23C34" />


            <Button
                android:id="@+id/confirm"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:layout_toLeftOf="@+id/delete"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="تایید دریافت سفارش"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>