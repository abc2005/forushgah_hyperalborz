<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/del" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/tvonvan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="11dp"
                    android:paddingBottom="7dp"
                    android:singleLine="false"
                    android:textColor="#D83830"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/rdtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/with"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="false"
                        android:drawableRight="@drawable/custom_radio_button"
                        android:singleLine="false"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/without"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableRight="@drawable/custom_radio_button"
                        android:singleLine="false"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="35"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Spinner
            android:id="@+id/color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50" />

        <TextView
            android:id="@+id/tvcolor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/plus" />

            <ImageView
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/tedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:lineSpacingExtra="11dp"
                android:singleLine="false"
                android:textColor="#CF2A22"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvtedad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ch7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvcheck7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/check7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/jamkala"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom|left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvjamkala"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/jamkhadamat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom|left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvjamkhadamat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        android:weightSum="100" >

        <TextView
            android:id="@+id/takhfif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom|left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvtakhfif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/jamkol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom|left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#057F00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvjamkol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>