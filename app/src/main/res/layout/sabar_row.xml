<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/tvonvan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="11dp"
                    android:paddingBottom="7dp"
                    android:singleLine="false"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/plus" />

                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/tedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="11dp"
                        android:singleLine="false"
                        android:textColor="#868686"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvtedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="11dp"
                        android:singleLine="false"
                        android:textColor="#868686"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:maxHeight="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/del" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:adjustViewBounds="true"
            android:maxHeight="130dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/pricekol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvpricekol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#868686"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:visibility="gone"
        android:paddingRight="8dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/takhfif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#F5454E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvtakhfif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#F5454E"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/nahaieprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#6DBF71"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvnahaieprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:includeFontPadding="false"
            android:lineSpacingExtra="11dp"
            android:singleLine="false"
            android:textColor="#6DBF71"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>