<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/goin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#fff"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/forush_vije"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:src="@drawable/vije"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/off"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="10dp"
                    android:background="#FA5776"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:lines="2"
            android:padding="5dp"
            android:textColor="#101010"
            android:textSize="14sp"></TextView>

        <LinearLayout
            android:id="@+id/ln_selling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8E8E8"></View>

            <TextView
                android:id="@+id/tvprice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"
                android:lines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="#E6423C"
                android:textSize="15sp"
                android:visibility="visible"></TextView>

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#67BC6B"
                android:textSize="16sp"
                android:visibility="visible"></TextView>



            <TextView
                    android:id="@+id/imageView1"
                    style="@style/textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:text="افزودن به سبد"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:visibility="visible" />


            <TextView
                android:id="@+id/tvnot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"
                android:lines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="@string/notmojud"
                android:textColor="#E6423C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>

            <android.support.v7.widget.CardView
                android:id="@+id/tedad_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                card_view:cardElevation="0dp">

                <RelativeLayout
                    android:id="@+id/lnnoclick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/min"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/tedad"
                        style="@style/singleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/tedad"
                        android:textColor="@color/ghahveie"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="7dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/plus" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
